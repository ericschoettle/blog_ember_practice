{{#if updateEntryForm}}
  <h1>New Entry</h1>
  <div class="container">
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="body">Enter your buggy thoughts</label>
        {{textarea value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date class="form-control" id="date" type="date"}}
      </div>

      <div class="form-group">
        <label for="date">Link to image</label>
        {{input value=image id="image"}}
      </div>

      <button class="btn btn-success"{{action 'update' entry}}>Update</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-info"{{action 'updateFormShow'}}>Update Entry</button>
{{/if}}
